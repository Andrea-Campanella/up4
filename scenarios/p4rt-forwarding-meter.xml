<!--
  This test scenario is the same as p4rt-forwarding, but we configure meter as well.
  We don't care on testing actual meter behaviour, but only if configuration of
  meter has gone well.
-->
<scenario name="p4rt-forwarding-meter" description="Forwarding with meter config test using p4runtime messages">
    <group name="P4rt-Forwarding-Meter">
        <group name="P4rt-Program-Meter">
            <group name="Push-Up4-Flows-Meter">
                <sequential var="${ENODEB#}"
                    starts="P4rt-Set-Fwd-Meter-${#}"
                    ends="P4rt-Set-Fwd-Meter-${#-1}">
                <step name="P4rt-Set-Fwd-Meter-${#}"
                      exec="${DOCKER_COMPOSE_CMD} exec -T p4rt p4rt-up4-flows program --base ${#}0 --ue-pool 17.0.${#-1}.0/24 --enb-addr 140.0.10${#-1}.1 --app-bw-meter 1000000 --sess-bw-meter 1000000"/>
                </sequential>
            </group>
            <step name="Check-Up4-Flows-1-Meter" requires="Push-Up4-Flows-Meter"
                  exec="onos-cli-grep ${OCI} up4:read-flows 'Apps=0, UL sess=${P4RT_UP4_FLOWS}, UL flows=${P4RT_UP4_FLOWS}, DL flows=${P4RT_UP4_FLOWS}'"/>
            <step name="Check-Up4-Flows-2-Meter" requires="^"
                  exec="onos-cli-grep ${OCI} up4:read-flows 'App meters=${P4RT_UP4_FLOWS_APP_FILTER}, Sess meters=${P4RT_UP4_FLOWS_APP_FILTER}'"/>
            <step name="Check-Flow-Rules-Meter" requires="^" delay="5"
                  exec="onos-check-flows ${OCI}"/>
            <step name="Check-Meters-Meter" requires="^" delay="5"
                  exec="onos-check-meters ${OCI}"/>
        </group>
        <group name="Check-Traffic-Fwd-Meter" requires="P4rt-Program-Meter">
            <parallel var="${ENODEB#}">
                <!-- Downlink -->
                <step name="Downlink-Enb-Recv-Gtp-Fwd-Meter-${#}" requires="P4rt-Program-Meter"
                      exec="mn-cmd ${ENODEB#} traffic.py recv-gtp -t 10 --teid-base ${#}0 --ue-pool 17.0.${#-1}.0/24 --enb-addr 140.0.10${#-1}.1"/>
                <step name="Downlink-Pdn-Send-Udp-Fwd-Meter-${#}" requires="P4rt-Program-Meter" delay="5"
                      exec="mn-cmd pdn traffic.py send-udp -c 10 --ue-pool 17.0.${#-1}.0/24 --enb-addr 140.0.10${#-1}.1"/>
                <!-- Uplink -->
                <step name="Uplink-Pdn-Recv-Udp-Fwd-Meter-${#}" requires="P4rt-Program-Meter"
                      exec="mn-cmd pdn traffic.py recv-udp -t 10 --ue-pool 17.0.${#-1}.0/24 --enb-addr 140.0.10${#-1}.1"/>
                <step name="Uplink-Enb-Send-Gtp-Fwd-Meter-${#}" requires="P4rt-Program-Meter" delay="5"
                      exec="mn-cmd ${ENODEB#} traffic.py send-gtp -c 10 --teid-base ${#}0 --ue-pool 17.0.${#-1}.0/24 --enb-addr 140.0.10${#-1}.1"/>
            </parallel>
        </group>
        <group name="P4rt-Clear-Meter" requires="~Check-Traffic-Fwd-Meter">
            <group name="Clear-Up4-Flows-Meter">
                <sequential var="${ENODEB#}"
                    starts="P4rt-Unset-Meter-${#}"
                    ends="P4rt-Unset-Meter-${#-1}">
                    <step name="P4rt-Unset-Fwd-Meter-${#}" requires="~Check-Traffic-Fwd-Meter"
                          exec="${DOCKER_COMPOSE_CMD} exec -T p4rt p4rt-up4-flows clear --base ${#}0 --ue-pool 17.0.${#-1}.0/24 --enb-addr 140.0.10${#-1}.1 --app-bw-meter 1000000 --sess-bw-meter 1000000"/>
                </sequential>
            </group>
            <step name="Check-Up4-Flows-1-Meter-Cleared" requires="Clear-Up4-Flows-Meter"
                  exec="onos-cli-grep ${OCI} up4:read-flows 'Apps=0, UL sess=0, UL flows=0, DL flows=0'"/>
            <step name="Check-Up4-Flows-2-Meter-Cleared" requires="^"
                  exec="onos-cli-grep ${OCI} up4:read-flows 'App meters=0, Sess meters=0'"/>
            <step name="Check-Flow-Rules-Meter-Cleared" requires="^" delay="5"
                  exec="onos-check-flows ${OCI}"/>
            <step name="Check-Meters-Meter-Cleared" requires="^" delay="5"
                  exec="onos-check-meters ${OCI}"/>
        </group>
    </group>
</scenario>
